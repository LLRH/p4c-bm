standard_thrift_files = \
bmv2_thrift_gen/gen-cpp/standard_constants.cpp \
bmv2_thrift_gen/gen-cpp/standard_constants.h \
bmv2_thrift_gen/gen-cpp/Standard.cpp \
bmv2_thrift_gen/gen-cpp/Standard.h \
bmv2_thrift_gen/gen-cpp/standard_types.cpp \
bmv2_thrift_gen/gen-cpp/standard_types.h

simple_pre_lag_thrift_files = \
bmv2_thrift_gen/gen-cpp/simple_pre_lag_constants.cpp \
bmv2_thrift_gen/gen-cpp/simple_pre_lag_constants.h \
bmv2_thrift_gen/gen-cpp/SimplePreLAG.cpp \
bmv2_thrift_gen/gen-cpp/SimplePreLAG.h \
bmv2_thrift_gen/gen-cpp/simple_pre_lag_types.cpp \
bmv2_thrift_gen/gen-cpp/simple_pre_lag_types.h

simple_switch_thrift_files = \
bmv2_thrift_gen/gen-cpp/simple_switch_constants.cpp \
bmv2_thrift_gen/gen-cpp/simple_switch_constants.h \
bmv2_thrift_gen/gen-cpp/SimpleSwitch.cpp \
bmv2_thrift_gen/gen-cpp/SimpleSwitch.h \
bmv2_thrift_gen/gen-cpp/simple_switch_types.cpp \
bmv2_thrift_gen/gen-cpp/simple_switch_types.h

thrift_files = \
$(standard_thrift_files) \
$(simple_pre_lag_thrift_files) \
$(simple_switch_thrift_files)

standard_IDL = $(top_srcdir)/submodules/bm/thrift_src/standard.thrift
simple_pre_lag_IDL = $(top_srcdir)/submodules/bm/thrift_src/simple_pre_lag.thrift
simple_switch_IDL = $(top_srcdir)/submodules/bm/targets/simple_switch/thrift/simple_switch.thrift

# See http://www.gnu.org/software/automake/manual/html_node/Multiple-Outputs.html
thrift_files.ts: $(standard_IDL) $(simple_pre_lag_IDL) $(simple_switch_IDL)
	@rm -f thrift_files.tmp
	@touch thrift_files.tmp
	$(THRIFT) -o $(builddir)/bmv2_thrift_gen/ --gen cpp -r $(standard_IDL)
	$(THRIFT) -o $(builddir)/bmv2_thrift_gen/ --gen cpp -r $(simple_pre_lag_IDL)
	$(THRIFT) -o $(builddir)/bmv2_thrift_gen/ --gen cpp -r $(simple_switch_IDL)
	@mv -f thrift_files.tmp $@
$(thrift_files): thrift_files.ts
## Recover from the removal of $@
	@if test -f $@; then :; else \
	  trap 'rm -rf thrift_files.lock thrift_files.ts' 1 2 13 15; \
## mkdir is a portable test-and-set
	if mkdir thrift_files.lock 2>/dev/null; then \
## This code is being executed by the first process.
	  rm -f thrift_files.ts; \
	  $(MAKE) $(AM_MAKEFLAGS) thrift_files.ts; \
	  result=$$?; rm -rf thrift_files.lock; exit $$result; \
	else \
## This code is being executed by the follower processes.
## Wait until the first process is done.
	  while test -d thrift_files.lock; do sleep 1; done; \
## Succeed if and only if the first process succeeded.
	    test -f thrift_files.ts; \
	  fi; \
	fi

BUILT_SOURCES = \
$(thrift_files)

CLEANFILES = thrift_files.ts
